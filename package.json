  },
  "homepage": "https://github.com/nickmccleery/nickmccleery.github.io#readme",
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^18.15.11",
    "@types/uuid": "^10.0.0",
    "esbuild": "^0.24.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "canvas": "^2.9.0",
    "js-yaml": "^4.1.0",
    "pdfjs-dist": "^4.8.69",
    "sharp": "^0.32.0",
    "uuid": "^10.0.0",
    "xmlbuilder2": "^3.1.1"
  }
}